<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>New User Sign Up</title>
  </head>
  <body>
    <%= form_for(@user) do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email %><br>
      <%= f.label :password %>
      <%= f.password_field :password %><br>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %><br>
      <%= f.submit %>
    <% end %>
  </body>
</html>
