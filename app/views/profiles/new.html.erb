<%= render 'shared/errors', model: @profile %>
  <h1>Please add your personal details:</h1>
  <%= form_for @profile, html: {style: 'padding-bottom:50px;'} do |f| %>
  <%= f.label :location %>
  <%= f.collection_select :location, @locations, :id, :name, includes_blank: true %><br>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :address %>
  <%= f.text_field :address %><br>
  <%= f.label :phone %>
  <%= f.number_field :phone %><br>
  <%= f.submit %>
<% end %>
